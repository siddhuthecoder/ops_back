{
  "compilerOptions": {
    "target": "ES2020",          // The ECMAScript target version
    "module": "commonjs",        // Module system
    "rootDir": "./src",          // Root directory for source files
    "outDir": "./dist",          // Output directory for compiled files
    "esModuleInterop": true,     // Enables interop between CommonJS and ES Modules
    "strict": true,              // Enable all strict type-checking options
    "skipLibCheck": true,        // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Ensure consistent casing in file names
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./types"] // Add custom types directory
  },
  "include": ["src/**/*", "swagger.js"],
  "exclude": ["node_modules"]
}
